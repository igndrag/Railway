<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="800.0" minWidth="800.0" prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.241" xmlns:fx="http://javafx.com/fxml/1" fx:controller="NATrain.FxController">
   <left>
      <Accordion prefWidth="200.0" BorderPane.alignment="CENTER">
        <panes>
          <TitledPane fx:id="simpleTrackSectionIcons" animated="false" text="Simple track section">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </TitledPane>
          <TitledPane fx:id="doubleTrackSectionIcons" animated="false" text="Double track section">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </TitledPane>
          <TitledPane fx:id="switchIcons" animated="false" text="Switch">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </TitledPane>
            <TitledPane fx:id="signalIcons" animated="false" text="Signal">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                </content>
            </TitledPane>
            <TitledPane fx:id="doubleSignalIcons" animated="false" text="DoubleSignal">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                </content>
            </TitledPane>
        </panes>
      </Accordion>
   </left>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <TextFlow minHeight="200.0" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </bottom>
   <center>
      <ScrollPane fx:id="workArea" minHeight="500.0" minWidth="450.0" BorderPane.alignment="CENTER" />
   </center>
   <right>
      <VBox maxWidth="100.0" minHeight="300.0" minWidth="150.0" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Raws:" />
            <TextField fx:id="rawsNumber" text="20"/>
            <Label text="Columns" />
            <TextField fx:id="columnsNumber" text="20"/>
            <AnchorPane prefHeight="24.0" prefWidth="100.0">
               <children>
                  <Button fx:id="testButton" layoutX="98.0" mnemonicParsing="false" onAction="#buttonClicked" text="Button" />
               </children>
            </AnchorPane>
            <TableView prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn prefWidth="75.0" text="Property" />
                <TableColumn prefWidth="75.0" text="Value" />
              </columns>
            </TableView>
            <Button  fx:id="greenButton" mnemonicParsing="false" onAction="#redButtonClicked" text="Green" />
            <Button  fx:id="redButton" mnemonicParsing="false"  onAction="#greenButtonClicked" text="Red" />
         </children>
      </VBox>
   </right>
</BorderPane>
